{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"allowJs": false,
		"skipLibCheck": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"paths": {
			"@module/use-virtual-list": ["./src/use-virtual-list/index.ts"],
			"@module/use-perfect-layout": ["./src/use-perfect-layout/index.ts"],
			"@module/infinite-grid": ["./src/infinite-grid/index.ts"]
		}
	},
	"include": ["src", "examples", "./src/**/*.ts", "./examples/**/*.ts"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
